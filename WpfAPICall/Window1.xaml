<Window x:Class="WpfAPICall.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAPICall"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">

    <Grid>

        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="5,6,6,0" Height="425">
            <ListView Height="314" Width="860" x:Name="lvUsers2">
                <ListView.View>
                    <GridView x:Name="GridView3">
                        <GridViewColumn DisplayMemberBinding= "{Binding id}" Header="#" Width="30"/>
                        <GridViewColumn DisplayMemberBinding= "{Binding employee_name}" Header="Name" Width="320"/>
                        <GridViewColumn DisplayMemberBinding= "{Binding employee_salary}" Header="Salary" Width="270"/>
                        <GridViewColumn DisplayMemberBinding= "{Binding employee_age}" Header="Age" Width="210"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>

    </Grid>
</Window>
